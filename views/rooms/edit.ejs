<% include ../partials/header %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit
                <%= room.name %>
            </h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/rooms/<%= room._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="room[name]" value="<%=room.name%>">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="room[price]" value="<%=room.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <br>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="room[description]" value="<%=room.description%>">
                </div>
                <div class="form-group">
                    <label for="Location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= room.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/rooms">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>